extends ../layout/layout

block styles
    link(rel='stylesheet' href='/index.css')
    style.
        *{
            margin: 0;
            padding: 0;
        }
        .tc-slider-fade li {
            position: absolute;
            left: 0;
            top: 0;
            right: 0;
            z-index: 8;
        }
        .tc-slider-horizontal{
            overflow: hidden;
        }
        .tc-slider-horizontal li img{
            width: 100%;
        }
        #demo .my-slider{
            width: 100%;
            height: 350px;;
        }

block content
    div#demo.tc-slider
        div.my-slider
            ul
                li
                    img(src='https://s1-ncfimg-com.alikunlun.com/index/homepage/slide_btb111/737255798da328f.jpg')
                    img(src='https://s3-ncfimg-com.alikunlun.com/product/regular/regular_banner3/3be1ac6176bbab5.jpg')
                    img(src='https://s1-ncfimg-com.alikunlun.com/index/homepage/slide_nov1111/c92ba0f2040c2e6.jpg')
    div.count-down

